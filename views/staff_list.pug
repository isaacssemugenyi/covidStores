extends layout
block content
    //-  Main container
    div.container-fluid
        div.row
            div.d-none.col-lg-2.d-lg-block#admin-list
                
                include include/staff_sidebar 

            div.col-md-12.col-lg-10
                //- Staff table
                table.table.table-hover.table-bordered.table-sm#product-table
                    thead.thead.covid-table.text-primary
                        tr
                        th(scope="col") Employee ID
                        th(scope="col") First Name
                        th(scope="col") Username
                        th(scope="col") Email
                        th(scope="col") Phone
                        th(scope="col") Role
                        th(scope="col") Edit
                        th(scope="col") Delete

                    tbody
                        //- Staff
                        each staff in members
                            tr
                                td #{staff.eid}
                                td #{staff.fname}
                                td #{staff.username}
                                td #{staff.email}
                                td #{staff.phone}
                                td #{staff.role}
                                td
                                    a(href="/staff/edit/" +staff.id role="button" title="Edit").btn.btn-warning.py-1.px-2
                                        i.icon-pencil.fa-sm
                                td
                                    a(href="/staff/delete/"+staff.id role="button" title="Delete" onclick="return confirm('This employee will be deleted permanently. Do you agree?')").btn.btn-danger.py-1.px-2
                                        i.icon-trash.fa-sm







