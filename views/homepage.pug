extends layout
block content
  //- Main container
  section.products
    div.section-title
      h2 Our products
    div.products-center
      //- Single product
      each product in context.products
        article.product
          div.img-container
            img.product-img(alt="products" src=product.image, style="max-height: 70px;")
            //- button.bag-btn #{product.price}.00 Ugx
            div.detail
              h6 
                strong Name : 
                span(style="color:#eb612a;")= product.name
              h6
                strong Price :
                span Ugx #{product.price}.00
              p
                strong S/No :
                span= product.serial
              p(style="margin-top: -17px;")
                strong Plan :
                span(style="font-size: 22px;")= product.payplan

              if product.scheme == "LTPP"
                span.prod
                  strong= product.scheme
              span.prod 
                a.btn.btn-success(href="/product/more/"+product.id) More
                  i.fas.fa-hand-point-right
            //- End single product 
        //- End single product 
  //- End main container
  //- Footer 
  footer.mt-3
    include include/footer.pug