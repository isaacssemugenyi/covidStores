extends layout
block content
    //-  Main container
    div.container-fluid
        div.row
            div.d-none.col-lg-2.d-lg-block#admin-list

                include include/staff_sidebar 

            div.col-md-12.col-lg-10
                div.row
                    div.col-md-8.offset-md-2
                        //- Client registration form
                        //- Handle scroll with css of this section
                        form.my-4.register#new_product(action="/product/new" method="POST" enctype="multipart/form-data")
                            h3.text-center Product Form
                            //- Personal data
                            //- input(type="hidden")
                            fieldset.client-register-detail.mb-2
                                //- legend Personal Data
                                div.form-row
                                    div.form-group.col-md-4
                                        label(for="pdt-name") Product Name
                                        input.form-control#pdt-name(type="text" name="pdt_name")
                                    div.form-group.col-md-4
                                        label(for="make") Make
                                        input.form-control#make(type="text" name="make" maximum="2")
                                    div.form-group.col-md-4
                                        label(for="pdt_color") Product Color
                                        input.form-control#pdt_color(type="text" name="pdt_color")

                                div.form-row
                                    div.form-group.col-md-8
                                        label(for="pdt_category") Category
                                        select.form-control#pdt_category(name="pdt_category")
                                            option(value="" selected disabled) Select category
                                            option(value="furniture") Furniture
                                            option(value="electronics") Electronics
                                            option(value="fitness") Fitness
                                            option(value="machinery") Machinery
                                            option(value="other") Others
                                    div.form-group.col-md-4
                                        label(for="serial_no") Serial Number
                                        input.form-control#serial_no(type="text" name="serial_no")
                                        
                            fieldset.client-register-detail.mb-2
                                //- legend Product Data
                                div.form-row
                                    div.form-group.col-md-4
                                        label(for="pdt_price") Product Price
                                        input(type="number" name="pdt_price").form-control#pdt_price
                                    //- div.form-group.col-md-4
                                    //-     label(for="initial_pay") Initial Pay
                                    //-     input(type="number").form-control#initial_pay
                                    div.form-group.col-md-4
                                        label(for="pay_interval") Payment Interval
                                        select.form-control#pay_interval(name="pay_interval")
                                            option(value="" selected disabled) Payment interval
                                            option(value="cash") Cash
                                            option(value="monthly") Monthly
                                            option(value="quartery") Quartery
                                    div.form-group.col-md-4
                                        label(for="pdt_scheme") Product Scheme
                                        select.form-control#pdt_scheme(name="pdt_scheme")
                                            option(value="" selected disabled) Product Scheme
                                            option(value="LTPP") LTPP
                                            option(value="normal") Normal
                                        
                                div.form-row
                                    div.form-group.col-md-4
                                        label(for="pdt_stock") Number in stock
                                        input.form-control#pdt_stock(type="number" name="pdt_stock")
                                    
                                    div.form-group.col-md-8
                                        label(for="pdt_image") Select Image
                                        input.form-control#pdt_image(type="file" name="pdt_image" accept="image/*")
                                div.form-row
                                    div.form-group.col-md-12
                                        label(for="pdt_desc") Describe the product
                                        textarea#pdt_desc(name="pdt_desc", cols="10", rows="2").form-control
                                

                            button(type="submit").btn.btn-block Create a product
                            script(src="/ckeditor/ckeditor.js")
                            script
                                | CKEDITOR.replace('pdt_desc')
                            
                            //- End product registration form 
                

    //- End main container 

    
        
    
        