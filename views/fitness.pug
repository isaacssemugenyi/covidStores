extends layout
block content
 
  //- Main container
  section.products
    div.section-title
      h2= title
    div.products-center
      //- Single product
      each product in context.products
        article.product
          div.img-container
            img.product-img(src="/img/home.jpg" alt="products")
            button.bag-btn Ugx. #{product.price}
            div.detail
              h3= product.name
              if product.scheme == "LTPP"
                h4= product.scheme 
            //- End single product           
  //- End main container
  //- Footer 
  footer.mt-3
    include include/footer.pug